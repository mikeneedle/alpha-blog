<table>
  <tr>
    <th>Username</th><th>Email</th><th>Author</th><th>Authored</th><th>Actions</th>
  </tr>
  <%= will_paginate %>
  
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td> 
      <td><%= pluralize(user.articles.count, "article") if user.articles %></td>
      <td><%= link_to 'Visit Profile', user_path(user) %> 
        <% if logged_in? and current_user.admin? %>
        <li><%= link_to "Delete this user", user_path(user), method: :delete,
            data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
        <% end %>
      </td> 
      <td>
      </td>
    </tr>
  <% end %>
  
</table>